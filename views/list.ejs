<%- include ("header") -%>

<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">

        <% newListItems.forEach(element => {%>
            <form action="/delete" method="post">
                <div class="item">
                    <input name="checkbox" value="<%=element._id%>"type="checkbox" onChange="this.form.submit()">
                    <p> <%= element.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%=listTitle%>">
            </form>
        <%});%>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required autofocus>
            <button type="submit" name="list" value="<%=listTitle%>"> + </button>
        </form>
    </div>
</body>
<%- include ("footer") -%>